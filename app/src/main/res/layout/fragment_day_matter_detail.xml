<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        app:cardElevation="3dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <FrameLayout
                android:id="@+id/id_fg_day_matter_detail_fl_title_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorDefault">

                <TextView
                    android:id="@+id/id_fg_day_matter_detail_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离 Sunday 还有"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/id_fg_day_matter_detail_tv_left_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_gravity="center"
                    android:textSize="80sp"
                    android:textColor="@color/black"
                    android:visibility="visible"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19年8个月28天"
                    android:layout_gravity="center"
                    android:textSize="35sp"
                    android:textColor="@color/black"
                    android:visibility="gone"/>


            </FrameLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"/>

            <FrameLayout
                android:id="@+id/id_fg_day_matter_detail_fl_date_container"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/gray">

                <TextView
                    android:id="@+id/id_fg_day_matter_detail_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标日: 2018-05-22 星期六"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    />

            </FrameLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>