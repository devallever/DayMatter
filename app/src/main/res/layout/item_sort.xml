<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:clickable="true"
    android:gravity="center"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/sort_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_item_slid_sort_tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:background="@drawable/slid_sort_tv_count_bg"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_margin="10dp"/>

            <ImageView
                android:id="@+id/id_item_slid_sort_iv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drawer_menu"
                android:layout_centerVertical="true"
                android:scaleType="centerInside"
                android:padding="10dp"
                android:tint="#222222"/>

            <TextView
                android:id="@+id/id_item_slid_sort_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/id_item_slid_sort_tv_count"
                android:layout_toRightOf="@id/id_item_slid_sort_iv_type"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="生活"
                android:textSize="12dp"
                android:padding="10dp"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_modify_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="修改"/>

        <TextView
            android:id="@+id/tv_delete_sort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="删除"/>

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#cccccc"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>